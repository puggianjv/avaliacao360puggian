        <addForeignKeyConstraint baseColumnNames="equipes_id"
                                 baseTableName="equipe_membros"
                                 constraintName="fk_equipe_membros_equipes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="equipe"/>
